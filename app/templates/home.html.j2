{% endblock head %}
{% block main %}
<div class="home-header">
  <div class="pic overlay">
    <img src="{{ url_for('static', filename='media/pic.jpg') }}" alt="" />
  </div>
  <div>
    <h1>Ezequiel L. Dzioba</h1>
    <p>{{ _("Systems Analysis Bachelor's student.") }}</p>
    <p>{{ _('Learning Full-Stack Web Development.') }}</p>
  </div>
</div>
<div class="home-content max-width-550px">
  <p>
    {{ _("Welcome to my space on the web!") }}
  </p>
  <p>
    {{ _("I'm a 23-year-old student pursuing a Bachelor's Degree in Systems
      Analysis. I'm also learning about full stack web development but I'm
      interested in all areas of software.") }}
  </p>
  <p>
    {{ _("Although I'm focused on university, I remain open to part-time
      proposals. Let's connect.") }}
  </p>
</div>
<div class="home-buttons max-width-550px">
  <a class="button-1" href="{{ url_for('links') }}">{{ _('Contact me') }}</a>
  <a class="button-1" href="{{ url_for('static', filename='media/cv-gen-'~_('en')~'-v2.0.0.pdf') }}"
    download>{{ _('CV') }}</a>
</div>
<p class="max-width-550px">
  <img id="activity" style="border: 2px solid var(--color-accent2); border-radius: 6px;"
    title="{{ _('Activity provided by Discord, via lanyard-profile-readme') }}"
    alt="{{ _('Activity provided by Discord, via lanyard-profile-readme') }}">
</p>
</p>

<script>
  function activity() {
    let api = "https://lanyard.cnrad.dev/api/"
    let id = "469204451777839155"
    let theme = "dark"
    let bg = getComputedStyle(document.documentElement).getPropertyValue('--color-bg1')
    let borderRadius = "0"
    let idleMessage = "{{ _('No activity for now...') }}"
    let showDisplayName = "true"
    let hideProfile = "true"

    let params = new URLSearchParams({
      theme,
      bg,
      borderRadius,
      idleMessage,
      showDisplayName,
      // hideProfile,
      "t": new Date().getTime()
    }).toString()

    document.querySelector('#activity').src = `${api}${id}?${params}`
  }
  activity()
  setInterval(activity, 10000) // 10 seconds
</script>
{% endblock main %}
